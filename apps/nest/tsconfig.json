{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@my-nest/common": [
        "libs/common/src"
      ],
      "@my-nest/common/*": [
        "libs/common/src/*"
      ],
      "@my-nest/config": [
        "libs/config/src"
      ],
      "@my-nest/config/*": [
        "libs/config/src/*"
      ]
    }
  }
}